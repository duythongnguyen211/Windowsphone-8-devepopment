<UserControl x:Class="Personal_Notes_Management_System.MyPushpinControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="76" Width="63" SizeChanged="UserControl_SizeChanged">

    <Grid x:Name="LayoutRoot">
        <Image Name="image" HorizontalAlignment="Left" Height="76" VerticalAlignment="Top" Width="63" Source="Assets/Pushpin/default-pushpin.png"/>
    </Grid>
</UserControl>