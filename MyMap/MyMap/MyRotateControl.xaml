<UserControl x:Class="MyMap.MyRotateControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{x:Null}" Height="50" Width="50" SizeChanged="UserControl_SizeChanged" MouseEnter="UserControl_MouseEnter" MouseMove="UserControl_MouseMove" MouseLeave="UserControl_MouseLeave" RenderTransformOrigin="0.5,0.5">
    <UserControl.RenderTransform>
        <CompositeTransform Rotation="0"/>
    </UserControl.RenderTransform>

    <Grid x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush Stretch="Uniform" ImageSource="/Assets/Ellipse_background.png"/>
        </Grid.Background>
    </Grid>
</UserControl>